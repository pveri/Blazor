
<EditForm Model="Genre" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Name:</label>
        <div>
            <InputText @bind-Value="Genre.Name"></InputText>
            <ValidationMessage For="@(() => Genre.Name)"></ValidationMessage>
        </div>
    </div>
    <button class="btn btn-success" type="submit">Save Genre</button>
</EditForm>

@code {
    [Parameter]public Genre Genre { get; set; }
    [Parameter]public EventCallback OnValidSubmit { get; set; }
}
